<Window x:Class="AttendanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attendance App" Height="450" Width="600" Background="#E8F5E9">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Введите количество посещений:" FontSize="16" Foreground="#388E3C"/>
            <TextBox x:Name="AttendanceTextBox" Width="200" Margin="0,5,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button Content="Добавить" Width="100" Click="AddButton_Click" Background="#4CAF50" Foreground="White"/>
                <Button Content="Сбросить" Width="100" Click="ResetButton_Click" Background="#FF5722" Foreground="White" Margin="10,0,0,0"/>
                <Button Content="Выход" Width="100" Click="ExitButton_Click" Background="#F44336" Foreground="White" Margin="10,0,0,0"/>
                <Button Content="О программе" Width="100" Click="AboutButton_Click" Background="#2196F3" Foreground="White" Margin="10,0,0,0"/>
            </StackPanel>
            <TextBlock x:Name="InfoTextBlock" FontSize="14" Foreground="#388E3C"/>
            <TextBlock x:Name="MinMaxTextBlock" FontSize="14" Foreground="#388E3C"/>
            <Canvas x:Name="AttendanceCanvas" Height="200" Background="#C8E6C9" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>

